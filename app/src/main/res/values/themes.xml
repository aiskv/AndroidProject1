<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="fontFamily">@font/opensans_medium</item>
    </style>
    <style name="LandButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="fontFamily">@font/opensans_medium</item>
    </style>

    <style name="Button.Digit">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_digit_button</item>
    </style>
    <style name="Button.Operation">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_oper_button</item>
    </style>
    <style name="Button.Function">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_fun_button</item>
    </style>

    <style name="LandButton.Digit">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_digit_button</item>
    </style>
    <style name="LandButton.Operation">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_oper_button</item>
    </style>
    <style name="LandButton.Function">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_fun_button</item>
    </style>

    <style name="CalcViewField">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">65sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="fontFamily">@font/opensans_light</item>
    </style>
    <style name="InputField">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <!--Source: https://stackoverflow.com/q/33061050 -->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/gray</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="AppTheme" parent="@style/Theme.Calculator">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceColor</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
    </style>
    <style name="myPopupMenuTextAppearanceColor" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>